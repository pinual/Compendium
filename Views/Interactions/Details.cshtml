@model Compendium.Models.Interaction

@{
    ViewData["Title"] = "Interaction Details";
}

<h1>Interaction Details</h1>

<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Affected Characters
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.AffectedCharacter1<br />
            @ViewBag.AffectedCharacter2
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Explanation)
        </dt>
        <dd class = "col-sm-10">
            @Html.TextAreaFor(model => model.Explanation, new { @class = "form-control", @rows = 12, @readonly = "readonly" })
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Source
        </dd>
    </dl>
    <div>
    @if (User.Identity.IsAuthenticated)
    {
        <div>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) | <a asp-action="Index">Back to List</a>
        </div>
    }
    else
    {
        <a asp-action="Index">Back to List</a>    
    }
    </div>
</div>

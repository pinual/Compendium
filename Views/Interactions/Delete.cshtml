@model Compendium.Models.Interaction

@{
    ViewData["Title"] = "Delete Interaction";
}

<h3>Are you sure you want to delete this Interaction?</h3>

<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Affected Characters
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.AffectedCharacter1<br />
            @ViewBag.AffectedCharacter2
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Explanation)
        </dt>
        <dd class = "col-sm-10">
            @Html.TextAreaFor(model => model.Explanation, new { @class = "form-control", @rows = 12, @readonly = "readonly" })
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Source
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
